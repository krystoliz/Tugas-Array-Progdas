#include <iostream>
using namespace std;

int main() {
    // membuat array kosong
    int nilai[] = {32,4534,535,453,5124,232930.2442349,3243248};

    
    cout << "Ukuran array nilai = " << sizeof(nilai) << endl;
    cout << "Ukuran per nilai = " << sizeof(*nilai) << "\n\n" << endl;
    


    int length = sizeof(nilai) / sizeof(*nilai);
    // mencetak isi array dengan perulangan
    for (int i = 0; i < length; i++) 
    {
        printf("Nilai ke-%d: %d\n", i, nilai[i]);
    }

    int min = nilai[0];
    for (int i = 1; i < length; i++)//iterasi untuk menentukan nilai terkecil
    {
        if (nilai[i] < min) {
            min = nilai[i];
        }
    }
    cout << "nilai minimum = " << min << endl;
    return 0;
}
