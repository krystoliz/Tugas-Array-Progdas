#include <iostream>
using namespace std;

int main() {


    int i, j, rows, k;
    k = 0;
    cout << "Enter number of rows: " << "\n";
    cin >> rows; // di sini harus input 4
    cout << endl;
    for (i = 1; i <= rows; ++i)
    {
        for (j = 1; j <= i; ++j)
        {
            k++;
            cout << k;
            cout << " ";
        }
        cout << "\n";
    }
    return 0;
}

#include <iostream>
using namespace std;

int main() {


    int i, j, rows, k;
    k = 0;
    rows = 4; // tanpa input apapun
    cout << endl;
    for (i = 1; i <= rows; ++i)
    {
        for (j = 1; j <= i; ++j)
        {
            k++;
            cout << k;
            cout << " ";
        }
        cout << "\n";
    }
    return 0;
}
